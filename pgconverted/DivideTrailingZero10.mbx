      <pg-code>
        Context("LimitedNumeric");
        Context()->{format}{number} = "%u";

        $b = random(2,9,1);
        $a = $b*random(2,9,1);

           $a1Exp = random(1,4,1);
           $a1Ten = 10**$a1Exp;
           $a1 = $a*$a1Ten;
           $b1 = $b;
           $ans1 = $a1/$b1;
           $ans1 = Compute("$ans1");

        $d = random(2,9,1);
        $c = $d*random(2,9,1);

           $a2Exp = random(3,5,1);
           $a2Ten = 10**$a2Exp;
           $b2Exp = random(1,$a2Exp-1,1);
           $b2Ten = 10**$b2Exp;
           $a2 = $c*$a2Ten;
           $b2 = $d*$b2Ten;
           $ans2 = $a2/$b2;
           $ans2 = Compute("$ans2");

        $s1 = $a2/10**$b2Exp;
        $s2 = $b2/10**$b2Exp;
        $s3 = 10**$a1Exp;
        $s4 = $a/$b;

        $s5 = 10**$a2Exp;
        $s6 = 10**$b2Exp;
        $s7 = 10**($a2Exp-$b2Exp);

        $zeroText1 = ($a1Exp==1) ? "zero" : "zeroes";
        $itOrThem = ($a1Exp==1) ? "it" : "them";
        $zeroText2 = ($b2Exp==1) ? "zero" : "zeroes";
      </pg-code>
